# LittleGenius AI - Variables d'environnement

# OpenAI API Key (vous devrez remplacer par votre vraie clé)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Mode de développement
NODE_ENV=development

# Port de développement React
PORT=3000

# PostgreSQL Database Configuration (pour développement local)
PGHOST=localhost
PGPORT=5432
PGUSER=littlegenius
PGPASSWORD=littlegenius123
PGDATABASE=littlegenius

# Optional: Connection pool settings
PGMAX=20
PGIDLETIMEOUT=30000
PGCONNECTIONTIMEOUT=2000

# Configuration Electron
ELECTRON_IS_DEV=true

# Base de données SQLite pour développement (fallback)
DB_TYPE=sqlite
DB_PATH=./data/littlegenius.db