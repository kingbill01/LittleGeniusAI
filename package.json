{
  "name": "littlegenius-ai",
  "version": "1.0.0",
  "description": "Educational platform for children aged 3-12 with integrated AI companion",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:renderer": "react-scripts start",
    "start:electron": "electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "react-scripts build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "keywords": [
    "education",
    "children",
    "ai",
    "learning",
    "electron",
    "react"
  ],
  "author": "LittleGenius AI Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "dotenv": "^16.6.1",
    "electron-is-dev": "^2.0.0",
    "framer-motion": "^10.16.16",
    "openai": "^4.20.1",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.littlegenius.ai",
    "productName": "LittleGenius AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
